<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#2D816F"
    android:backgroundTint="#45FCF9F9"
    tools:context=".LoginActivity">

    <TextView
        android:id="@+id/id_satu"
        android:layout_width="145dp"
        android:layout_height="37dp"
        android:layout_marginTop="32dp"
        android:fontFamily="casual"
        android:shadowColor="#26DDC8"
        android:text="Login Aplikasi"
        android:textAlignment="center"
        android:textColor="#F70E0D0D"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/imglogin"
        app:layout_constraintStart_toStartOf="@+id/imglogin"
        app:layout_constraintTop_toBottomOf="@+id/imglogin" />

    <ImageView
        android:id="@+id/imglogin"
        android:layout_width="138dp"
        android:layout_height="98dp"
        android:layout_marginTop="48dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.542"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/login" />

    <EditText
        android:id="@+id/username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="52dp"
        android:ems="10"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.266"
        app:layout_constraintStart_toEndOf="@+id/imguser"
        app:layout_constraintTop_toBottomOf="@+id/id_satu" />

    <EditText
        android:id="@+id/password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:ems="10"
        android:inputType="textPassword"
        app:layout_constraintEnd_toEndOf="@+id/username"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/imgpass"
        app:layout_constraintTop_toBottomOf="@+id/username" />

    <Spinner
        android:id="@+id/sp_level"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="120dp"
        android:layout_marginTop="28dp"
        android:layout_marginEnd="80dp"
        app:layout_constraintEnd_toEndOf="@+id/password"
        app:layout_constraintHorizontal_bias="0.67"
        app:layout_constraintStart_toEndOf="@+id/textView3"
        app:layout_constraintTop_toBottomOf="@+id/password" />

    <Button
        android:id="@+id/b_login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="52dp"
        android:text="Login"
        app:layout_constraintEnd_toEndOf="@+id/sp_level"
        app:layout_constraintHorizontal_bias="0.509"
        app:layout_constraintStart_toStartOf="@+id/textView3"
        app:layout_constraintTop_toBottomOf="@+id/sp_level" />

    <ImageView
        android:id="@+id/imguser"
        android:layout_width="27dp"
        android:layout_height="35dp"
        android:layout_marginTop="276dp"
        app:layout_constraintEnd_toStartOf="@+id/id_satu"
        app:layout_constraintHorizontal_bias="0.567"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/user" />

    <ImageView
        android:id="@+id/imgpass"
        android:layout_width="25dp"
        android:layout_height="35dp"
        android:layout_marginTop="52dp"
        app:layout_constraintEnd_toEndOf="@+id/imguser"
        app:layout_constraintStart_toStartOf="@+id/imguser"
        app:layout_constraintTop_toBottomOf="@+id/imguser"
        app:srcCompat="@drawable/password" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="User"
        android:textSize="18sp"
        app:layout_constraintEnd_toStartOf="@+id/password"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/imgpass"
        app:layout_constraintTop_toBottomOf="@+id/imgpass" />

</androidx.constraintlayout.widget.ConstraintLayout>